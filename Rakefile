begin
  require 'jeweler'
  Jeweler::Tasks.new do |gemspec|
    gemspec.name = "lockdown"
    gemspec.summary = "Lockdown is an authorization system for RubyOnRails (ver >= 2.1)."
    gemspec.description = "Lockdown is an authorization system for RubyOnRails (ver >= 2.1)."
    gemspec.email = "andy@stonean.com"
    gemspec.homepage = "http://stonean.com/wiki/lockdown"
    gemspec.authors = ["Andrew Stone"]
    gemspec.add_dependency 'ruby2ruby'
    gemspec.add_dependency 'ParseTree' # ruby2ruby doesn't install it properly
  end
rescue LoadError
  puts "Jeweler not available. Install it with: sudo gem install technicalpickles-jeweler -s http://gems.github.com"
end
